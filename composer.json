{
    "name": "relmsg/security-bundle",
    "description": "Security Bundle via Json Web Token",
    "type": "symfony-bundle",
    "license": "Apache-2.0",
    "homepage": "https://dev.relmsg.ru/security-bundle",
    "authors": [
        {
            "name": "Oleg Kozlov",
